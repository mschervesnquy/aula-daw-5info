<%-include('../cabecalho.ejs')%>
    <form method="post">
        <input type="text" class="pesquisa" name="pesquisa" placeholder="Digite o nome que deseja pesquisar">
        <input type="submit" value="pesquisar">
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Foto</th>
            <th>Ações</th>
        </tr>
        <% Usuarios.forEach(function(usuario) { %>
        <tr>
            <td>
                <%=usuario.__id%>
            </td>
            <td>
                <%=usuario.nome%>
            </td>
            <td>
                <%=usuario.email%>
            </td>
            <td>
                <%=usuario.foto%>
            </td>
            <td>
                <a href="/usuario/edt">
                    <img class="img-responsive" src="/edit.png" alt="Editar">
                </a>
                <a href="/usuario/del/<%=usuario._id%>">
                    <img class="img-responsive" src="/delete.png" alt="Deletar">
                </a>
            </td>
        </tr>
        <% }) %>
    </table>
<%-include('../rodape.ejs')%>
